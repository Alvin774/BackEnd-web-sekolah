<%- include('partials/header') %>

  <!-- Custom CSS (home.css) -->
  <link rel="stylesheet" href="css/home.css" />
  <!-- Header Start -->
  <!-- Navigasi 1 -->
  <div class="navigasi1 d-flex flex-row">
    <div class="container d-flex align-items-center">
      <marquee>Selamat Datang Di SMP Islam Sa'adatuddarain NW Majuwet</marquee>
    </div>
  </div>

  <!-- Home Banner Start -->
  <section id="home-banner">
    <div class="overlay">
      <div class="content-wrapper">
        <h1 id="animated-text">
          Selamat Datang di SMP Islam Sa'adatuddarain NW Majuwet
        </h1>
        <p id="animated-subtext">
          Sa'adatuddarain: Pendidikan Cerdas Untuk Kehidupan Bahagia Dunia dan Akhirat
        </p>
        <a href="#berita-artikel" class="btn-explore">
          <i class="bi bi-arrow-down-circle"></i> Jelajahi Sekolah
        </a>
      </div>
    </div>
  </section>
  <!-- Home Banner End -->

  <!-- Berita Dan Artikel Start -->
  <section class="berita-artikel py-5" id="berita-artikel">
    <div class="container">
      <h2 class="text-center mb-4">Berita Dan Artikel</h2>
      <hr class="garis" />
      <div class="row d-flex justify-content-center g-4 mt-4">
        <!-- Konten berita akan dimuat secara dinamis (misalnya lewat js/home.js) -->
      </div>
    </div>
  </section>

  <!-- Banner Section (mengambil data dari API) -->
  <section class="ppdb-home">
    <div id="bannerContainer"></div>
  </section>

    <!-- Pengumuman Atau Agenda Section -->
    <section class="pengumuman-agenda py-5">
      <div class="container">
        <h2 class="text-center mb-5 text-success">Pengumuman Atau Agenda</h2>
        <hr class="garis" />
        <div class="row d-flex justify-content-center mt-4" id="announcementsContainer">
          <!-- Data pengumuman akan dimuat di sini -->
        </div>        
      </div>
    </section>


    <section class="statistik py-5 text-white">
      <div class="container text-center">
        <div class="row justify-content-center">
          <div class="col-12 col-sm-3 mb-4">
            <div class="statistik-item">
              <i class="bi bi-mortarboard-fill display-3"></i>
              <h3 class="fw-bold mt-2 counter" data-target="0">0</h3>
              <p class="mb-0">Siswa</p>
            </div>
          </div>
          <div class="col-12 col-sm-3 mb-4">
            <div class="statistik-item">
              <i class="bi bi-building display-3"></i>
              <h3 class="fw-bold mt-2 counter" data-target="0">0</h3>
              <p class="mb-0">Gedung</p>
            </div>
          </div>
          <div class="col-12 col-sm-3 mb-4">
            <div class="statistik-item">
              <i class="bi bi-people-fill display-3"></i>
              <h3 class="fw-bold mt-2 counter" data-target="0">0</h3>
              <p class="mb-0">Guru & Staff</p>
            </div>
          </div>
          <div class="col-12 col-sm-3 mb-4">
            <div class="statistik-item">
              <i class="bi bi-award-fill display-3"></i>
              <h3 class="fw-bold mt-2 counter" data-target="0">0</h3>
              <p class="mb-0">Prestasi</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    
  <!-- Statistik End -->


  <!-- Review Alumni Start -->
  <section id="alumni-reviews" class="alumni-reviews py-5">
    <div class="container">
      <h2 class="text-center text-success mb-4">Alumni Reviews</h2>
      <hr class="divider" />
      <div id="carouselAlumni" class="carousel slide mt-5" data-bs-ride="carousel">
        <div class="carousel-inner">
          <!-- Carousel items akan dimuat secara dinamis -->
        </div>
        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselAlumni" data-bs-slide="prev">
          <span class="carousel-control-prev-icon shadow" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselAlumni" data-bs-slide="next">
          <span class="carousel-control-next-icon shadow" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </section>
  <!-- Review Alumni End -->
  <!-- Custom JS (home.js) -->
  <script src="js/home.js"></script>
<%- include('partials/footer') %>
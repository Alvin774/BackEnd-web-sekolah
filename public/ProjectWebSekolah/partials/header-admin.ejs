  <style>
    :root {
      --primary-color: #4e73df;
      --secondary-color: #1cc88a;
      --danger-color: #e74a3b;
      --dark-color: #2a3f54;
      --light-color: #f8f9fc;
      --sidebar-width: 280px;
      --header-height: 70px;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f0f2f5;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    /* Sidebar Styles */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: var(--sidebar-width);
      height: 100vh;
      background: var(--dark-color);
      color: white;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      z-index: 1000;
      transition: all 0.3s ease;
      overflow: hidden; /* Menghilangkan scrollbar */
    }

    .sidebar-inner {
      height: 100%;
      overflow-y: auto; /* Scroll internal */
      padding-right: 17px; /* Menyembunyikan scrollbar */
      box-sizing: content-box; /* Memastikan padding tidak mengubah lebar */
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* IE and Edge */
    }

    .sidebar-inner::-webkit-scrollbar {
      display: none; /* Chrome, Safari, Opera */
    }

    .sidebar-collapsed {
      width: 70px;
    }

    .logo-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px 15px;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .logo-container img {
      width: 60px;
      height: 60px;
      object-fit: contain;
      margin-bottom: 10px;
      transition: all 0.3s ease;
      border-radius: 50%;
      background-color: white;
      padding: 5px;
    }

    .logo-container h5 {
      font-size: 13px;
      text-align: center;
      margin-top: 8px;
      transition: opacity 0.3s ease;
      white-space: nowrap;
    }

    .sidebar-collapsed .logo-container h5 {
      opacity: 0;
      display: none;
    }

    .nav-item {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      transition: all 0.3s ease;
      border-left: 3px solid transparent;
      margin-bottom: 2px;
    }

    .nav-item:hover, .nav-item.active {
      background-color: rgba(255, 255, 255, 0.05);
      color: white;
      border-left: 3px solid var(--secondary-color);
    }

    .nav-item i {
      font-size: 16px;
      margin-right: 15px;
      width: 20px;
      text-align: center;
    }

    .nav-item span {
      transition: opacity 0.3s ease;
      white-space: nowrap;
      font-size: 14px;
    }

    .sidebar-collapsed .nav-item span {
      opacity: 0;
      display: none;
    }

    .sidebar-footer {
      padding: 15px 20px;
      border-top: 1px solid rgba(255,255,255,0.1);
      position: sticky;
      bottom: 0;
      background: var(--dark-color);
    }

    .nav-group-title {
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: rgba(255, 255, 255, 0.4);
      padding: 15px 20px 5px;
      font-weight: 600;
    }

    /* Navbar Styles */
    .main-content {
      margin-left: var(--sidebar-width);
      transition: all 0.3s ease;
    }

    .main-content-expanded {
      margin-left: 70px;
    }

    .top-navbar {
      background-color: white;
      height: var(--header-height);
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      display: flex;
      align-items: center;
      padding: 0 20px;
      position: fixed;
      top: 0;
      right: 0;
      left: var(--sidebar-width);
      z-index: 999;
      transition: all 0.3s ease;
    }

    .navbar-expanded {
      left: 70px;
    }

    .toggle-sidebar-btn {
      background: none;
      border: none;
      color: var(--dark-color);
      font-size: 18px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      transition: all 0.3s ease;
    }

    .toggle-sidebar-btn:hover {
      background-color: rgba(0, 0, 0, 0.05);
    }

    .search-form {
      display: flex;
      align-items: center;
      background-color: #f8f9fc;
      border-radius: 24px;
      padding: 4px 15px;
      margin-left: 16px;
    }

    .search-form input {
      border: none;
      background: transparent;
      padding: 6px;
      outline: none;
      width: 240px;
      font-size: 14px;
    }

    .search-form button {
      background: none;
      border: none;
      color: #858796;
      cursor: pointer;
    }

    .navbar-items {
      display: flex;
      align-items: center;
      margin-left: auto;
    }

    .navbar-item {
      position: relative;
      margin-left: 16px;
    }

    .notification-badge {
      position: absolute;
      top: -5px;
      right: -5px;
      width: 16px;
      height: 16px;
      background-color: var(--danger-color);
      color: white;
      font-size: 9px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
    }

    .navbar-icon {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #858796;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .navbar-icon:hover {
      background-color: rgba(0, 0, 0, 0.05);
      color: var(--primary-color);
    }

    .vertical-divider {
      height: 36px;
      width: 1px;
      background-color: #eaecf4;
      margin: 0 16px;
    }

    .user-profile {
      display: flex;
      align-items: center;
      cursor: pointer;
    }

    .user-avatar {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 10px;
      border: 2px solid #eaecf4;
    }

    .user-info {
      display: flex;
      flex-direction: column;
    }

    .user-name {
      font-size: 13px;
      font-weight: 600;
      color: #5a5c69;
    }

    .user-role {
      font-size: 11px;
      color: #858796;
    }

    /* Mobile styles */
    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }
      
      .main-content {
        margin-left: 0;
      }
      
      .top-navbar {
        left: 0;
      }
      
      .mobile-menu-btn {
        display: block;
      }
      
      .search-form {
        display: none;
      }
    }

    .offcanvas.sidebar {
      width: 280px;
    }

    /* Content area */
    .content-wrapper {
      padding: calc(var(--header-height) + 20px) 20px 20px;
      min-height: 100vh;
    }

    /* Dropdown menus */
    .dropdown-menu {
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.175);
      border: none;
      border-radius: 0.35rem;
    }

    .dropdown-item {
